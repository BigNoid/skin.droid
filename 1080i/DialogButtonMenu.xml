<?xml version="1.0" encoding="UTF-8"?>
<window type="buttonMenu" id="111">
    <defaultcontrol always="true">3110</defaultcontrol>
    <zorder>6</zorder>
    <animation type="WindowClose" reversible="false">
        <effect type="fade" start="100" end="0" time="100" />
    </animation>
    <controls>
        <include>GlobalOverlay</include>
        <control type="grouplist" id="3110">
            <posx>-14</posx>
            <posy>72</posy>
            <width>600</width>
            <height>1080</height>
            <itemgap>0</itemgap>
            <onleft>3110</onleft>
            <onright>3110</onright>
            <onup>3110</onup>
            <ondown>3110</ondown>
            <orientation>vertical</orientation>
            <control type="button" id="3112">
                <description>Exit XBMC button</description>
                <width>600</width>
                <label>13012</label>
                <onclick>Quit()</onclick>
                <texturefocus border="14,0,14,0">dialogs/shutdown_focus.png</texturefocus>
                <texturenofocus border="14,0,14,2">dialogs/shutdown_nofocus.png</texturenofocus>
                <visible>System.ShowExitButton</visible>
            </control>
            <control type="button" id="3113">
                <description>Master mode button</description>
                <width>600</width>
                <label>20046</label>
                <onclick>xbmc.mastermode</onclick>
                <texturefocus border="14,0,14,0">dialogs/shutdown_focus.png</texturefocus>
                <texturenofocus border="14,0,14,2">dialogs/shutdown_nofocus.png</texturenofocus>
                <visible>System.HasLocks</visible>
            </control>
            <control type="button" id="3114">
                <description>LogOff Profile</description>
                <width>600</width>
                <label>$LOCALIZE[20126] $INFO[system.profilename]</label>
                <onclick>dialog.close(all,true)</onclick>
                <onclick>System.LogOff</onclick>
                <texturefocus border="14,0,14,0">dialogs/shutdown_focus.png</texturefocus>
                <texturenofocus border="14,0,14,2">dialogs/shutdown_nofocus.png</texturenofocus>
                <visible>System.Loggedon + System.HasLoginScreen</visible>
            </control>
            <control type="button" id="3115">
                <description>Custom Shutdown Timer button</description>
                <width>600</width>
                <label>$LOCALIZE[20151]</label>
                <label2>[B]$INFO[System.Alarmpos][/B]</label2>
                <onclick>XBMC.CancelAlarm(shutdowntimer)</onclick>
                <texturefocus border="14,0,14,0">dialogs/shutdown_focus.png</texturefocus>
                <texturenofocus border="14,0,14,2">dialogs/shutdown_nofocus.png</texturenofocus>
                <visible>System.HasAlarm(shutdowntimer)</visible>
            </control>
            <control type="button" id="3116">
                <description>Custom Shutdown Timer button</description>
                <width>600</width>
                <label>20150</label>
                <onclick>XBMC.AlarmClock(shutdowntimer,XBMC.Shutdown())</onclick>
                <texturefocus border="14,0,14,0">dialogs/shutdown_focus.png</texturefocus>
                <texturenofocus border="14,0,14,2">dialogs/shutdown_nofocus.png</texturenofocus>
                <visible>!System.HasAlarm(shutdowntimer)</visible>
            </control>
            <control type="button" id="3118">
                <description>Shutdown</description>
                <width>600</width>
                <label>13005</label>
                <onclick>ShutDown()</onclick>
                <texturefocus border="14,0,14,0">dialogs/shutdown_focus.png</texturefocus>
                <texturenofocus border="14,0,14,2">dialogs/shutdown_nofocus.png</texturenofocus>
            </control>
            <control type="button" id="3119">
                <description>Suspend xbmc</description>
                <width>600</width>
                <label>13011</label>
                <onclick>XBMC.Suspend()</onclick>
                <texturefocus border="14,0,14,0">dialogs/shutdown_focus.png</texturefocus>
                <texturenofocus border="14,0,14,2">dialogs/shutdown_nofocus.png</texturenofocus>
            </control>
            <control type="button" id="3120">
                <description>Reboot button</description>
                <height>84</height>
                <width>600</width>
                <label>13013</label>
                <onclick>XBMC.Reset()</onclick>
                <texturefocus border="14,0,14,0">dialogs/shutdown_focus.png</texturefocus>
                <texturenofocus border="14,0,14,2">dialogs/shutdown_nofocus.png</texturenofocus>
            </control>
            <control type="button" id="3111">
                <description>Exit XBMC button</description>
                <width>600</width>
                <label>31017</label>
                <onclick>noop</onclick>
                <aligny>top</aligny>
                <textoffsety>6</textoffsety>
                <texturefocus border="14,14,14,3">dialogs/context_bottom.png</texturefocus>
                <texturenofocus border="14,14,14,3">dialogs/context_bottom.png</texturenofocus>
                <disabledcolor>$VAR[ThemeColorVar]</disabledcolor>
                <enable>no</enable>
            </control>
        </control>
    </controls>
</window>