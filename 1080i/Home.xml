<?xml version="1.0" encoding="UTF-8"?>
<window id="0">
    <defaultcontrol always="true">8000</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
        <include>GlobalBackground</include>
        <control type="group">
            <animation type="WindowOpen" reversible="false" condition="![Window.Previous(fullscreenvideo) | Window.Previous(visualisation) | Window.Previous(slideshow)]">
                <effect type="zoom" start="80" end="100" center="960,540" easing="out" tween="cubic" time="300" />
                <effect type="fade" start="0" end="100" time="300" />
            </animation>
            <animation type="WindowClose" reversible="false">
                <effect type="zoom" start="100" end="80" center="960,540" easing="in" tween="cubic" time="300" />
                <effect type="fade" start="100" end="0" time="300" />
            </animation>
            <include>HomeItemsPanel</include>
        </control>
        <include>NotificationCenter</include>
        <control type="grouplist" id="9000">
            <include>MediaMenuGrouplist</include>
            <control type="button" id="1">
                <description>Set background</description>
                <label>33070</label>
                <onclick>ClearProperty(MediaMenu,Home)</onclick>
                <onclick>ActivateWindow(1112)</onclick>
                <include>MediaMenuButton</include>
            </control>
            <include>MediaMenuBottomButton</include>
        </control>
        <control type="group">
            <visible>system.getbool(lookandfeel.enablerssfeeds)</visible>
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="100" time="300" />
            </animation>
            <animation type="WindowClose" reversible="false">
                <effect type="fade" start="100" end="0" time="300" />
            </animation>
            <control type="rss" id="1">
                <posx>100</posx>
                <posy>1020</posy>
                <width>1720</width>
                <height>60</height>
                <font>Small</font>
                <textcolor>Floor</textcolor>
                <headlinecolor>Floor</headlinecolor>
                <titlecolor>FF3b647c</titlecolor>
                <scrollspeed>50</scrollspeed>
                <shadowcolor>FF686868</shadowcolor>
                <urlset>1</urlset>
            </control>
            <control type="image">
                <posx>610r</posx>
                <posy>967</posy>
                <width>610</width>
                <height>113</height>
                <texture>common/rss_fade_right.png</texture>
            </control>
            <control type="image">
                <posy>967</posy>
                <width>610</width>
                <height>113</height>
                <texture>common/rss_fade.png</texture>
            </control>
        </control>

        <control type="group">
            <visible>Player.HasVideo</visible>
            <posx>592</posx>
            <posy>72</posy>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>736</width>
                <height>412</height>
                <texture border="14">dialogs/shutdown_bottom.png</texture>
            </control>
            <control type="videowindow" id="2">
                <description>Home window video</description>
                <posx>12</posx>
                <posy>0</posy>
                <width>712</width>
                <height>400</height>
                <visible>Player.HasVideo</visible>
            </control>
        </control>
        
    </controls>
</window>