<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2006">
	<defaultcontrol always="true">-</defaultcontrol>
	<allowoverlay>no</allowoverlay>

	<controls>

		<control type="visualisation" id="2">
			<description>visualisation</description>
			<include>Dimensions_Fullscreen</include>
		</control>

		<control type="group">
			<visible>Player.ShowInfo + ![Window.IsVisible(VisualisationSettings) | Window.IsVisible(VisualisationPresetList)]</visible>

			<control type="image">
				<description>Music cover image</description>
				<posx>45</posx>
				<posy>45</posy>
				<width>360</width>
				<height>360</height>
				<fadetime>200</fadetime>
				<texture background="true">$INFO[MusicPlayer.cover]</texture>
				<aspectratio  align="left" aligny="top">keep</aspectratio>
				<bordertexture border="5">other_textures/ButtonFo.png</bordertexture>
				<bordersize>12</bordersize>
			</control>

			<control type="label">
				<posx>45</posx>
				<posy>915</posy>
				<width>1320</width>
				<label>$INFO[MusicPlayer.Album]$INFO[MusicPlayer.Artist, - ]</label>
				<align>left</align>
				<font>Medium</font>
				<shadowcolor>black</shadowcolor>
			</control>

			<control type="label">
				<posx>45</posx>
				<posy>966</posy>
				<width>1320</width>
				<label>$INFO[MusicPlayer.Title]</label>
				<scroll>true</scroll>
				<align>left</align>
				<font>Medium</font>
				<shadowcolor>black</shadowcolor>
			</control>

			<control type="label">
				<description>Track Count</description>
				<posx>1875</posx>
				<posy>915</posy>
				<width>450</width>
				<label>$INFO[MusicPlayer.PlaylistPosition,[COLOR=blue]$LOCALIZE[554]:[/COLOR] ]$INFO[MusicPlayer.PlaylistLength, / ]</label>
				<align>right</align>
				<font>Medium</font>
				<shadowcolor>black</shadowcolor>
				<visible>MusicPlayer.ChapterCount</visible>
				<animation effect="slide" end="0,51" condition="!MusicPlayer.Content(Episodes) + !MusicPlayer.Content(MusicVideos)">Conditional</animation>
			</control>

			<control type="label">
				<description>Player Times</description>
				<posx>1875</posx>
				<posy>966</posy>
				<width>750</width>
				<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
				<align>right</align>
				<font>Medium</font>
				<shadowcolor>black</shadowcolor>
			</control>

			<control type="progress">
				<description>Progressbar</description>
				<posx>45</posx>
				<posy>45r</posy>
				<width>1830</width>
				<height>21</height>
				<info>Player.Progress</info>
			</control>

		</control>

	</controls>

</window>