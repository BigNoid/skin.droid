<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="6">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<views>50,51,52,53,54,55</views>
    <onload>RunScript(script.tv.show.next.aired,backend=True)</onload>
