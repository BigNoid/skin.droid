            <include>View_53_ShowCase</include>
            <include>View_54_InfoList</include>
            <include>View_55_SmallIcons</include>
        </control>
        <control type="group">
            <visible>Control.IsVisible(50) | Control.IsVisible(51) | Control.IsVisible(55)</visible>
            <include>FloorFlagsBack</include>
        </control>
        <include>VideoFlags</include>
        <control type="button">
            <posx>0</posx>
            <posy>90r</posy>
            <width>1920</width>
            <height>90</height>
            <font>Medium_Caps2</font>
            <label>$INFO[ListItem.Label]</label>
            <label2>$INFO[ListItem.Label2]</label2>
            <textoffsetx>30</textoffsetx>
            <disabledcolor>White2</disabledcolor>
            <enable>no</enable>
            <visible>[Control.IsVisible(51) | Control.IsVisible(55)] + !Control.IsVisible(6050)</visible>
        </control>
        <control type="grouplist" id="9000">
            <include>MediaMenuGrouplist</include>
            <control type="button" id="2">
                <description>View</description>
                <include>MediaMenuButton</include>            
            </control>

            <control type="button" id="3">
                <description>Sort</description>
                <include>MediaMenuButton</include>
            </control>

            <control type="togglebutton" id="4">
                <description>Ascending</description>
                <label>584</label>
                <altlabel>585</altlabel>
                <include>MediaMenuButton</include>
            </control>


            <control type="radiobutton" id="7">
                <description>Stack</description>
                <label>14000</label>
                <altlabel>14001</altlabel>
                <include>MediaMenuButton</include>
                <visible>Control.IsEnabled(7)</visible>
            </control>

            <control type="button" id="8">
                <description>Search</description>
                <label>137</label>
                <include>MediaMenuButton</include>
            </control>
            <control type="button" id="10">
                <description>Hide Watched</description>
                <label>-</label>
                <label2>[COLOR Blue2]$INFO[Container.NumItems][/COLOR]</label2>
                <include>MediaMenuButton</include>
            </control>

            <control type="radiobutton" id="11">
                <description>Unlock Shares</description>
                <label>20336</label>
                <onclick>xbmc.mastermode</onclick>
                <selected>system.ismaster</selected>
                <visible>system.haslocks</visible>
                <include>MediaMenuButton</include>
            </control>

            <control type="radiobutton" id="16">
                <description>PartyMode</description>
                <label>589</label>
                <include>MediaMenuButton</include>
                <visible>Container.Content(MusicVideos)</visible>
            </control>

            <control type="radiobutton" id="17">
                <description>Flatten</description>
                <label>20411</label>
                <include>MediaMenuButton</include>
            </control>

            <control type="edit" id="19">
                <description>Activate Filter</description>
                <label>587</label>
                <hinttext></hinttext>
                <height>72</height>
                <include>MediaMenuButton</include>
                <visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
            </control>
            <control type="radiobutton" id="20">
                <description>Advanced Filter</description>
                <label>587</label>
                <height>72</height>
                <include>MediaMenuButton</include>
                <onclick condition="Control.IsVisible(52) | Control.IsVisible(53)">SetProperty(SlideFilterDialogup,True,Home)</onclick>
                <onclick>ClearProperty(MediaMenu,Home)</onclick>
                <onclick>Filter</onclick>
                <visible>Container.CanFilterAdvanced</visible>
            </control>
            <control type="button" id="4001">
                <description>ShowCaseWrap</description>
                <label>$LOCALIZE[31046]:</label>
                <label2>[COLOR Blue2]$VAR[ShowCaseNavLabelVar][/COLOR]</label2>
                <onclick>Skin.ToggleSetting(showcasewrap)</onclick>
                <onclick>ActivateWindow(1113)</onclick>
                <onclick>ActivateWindow(videos)</onclick>
                <include>MediaMenuButton</include>
                <visible>Control.IsVisible(53)</visible>
            </control>
            <control type="button" id="4002">
                <description>ShowCaseWrap</description>
                <label>Navigation help</label>
                <onclick>ClearProperty(MediaMenu,Home)</onclick>
                <onclick>ActivateWindow(1114)</onclick>
                <include>MediaMenuButton</include>
                <visible>Control.IsVisible(53) + system.getbool(input.enablemouse)</visible>
            </control>
            <include>MediaMenuBottomButton</include>

        </control>
