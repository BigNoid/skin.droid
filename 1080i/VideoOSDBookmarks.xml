<?xml version="1.0" encoding="UTF-8"?>
<window id="125">
	<defaultcontrol always="true">2</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
    <controls>
		<control type="group">
            <animation effect="slide" start="0,-270" end="0,0" time="500" tween="cubic" easing="out">WindowOpen</animation>
            <animation effect="slide" start="0,-270" end="0,0" time="500" tween="cubic" easing="out">VisibleChange</animation>
            <animation effect="slide" end="0,-270" start="0,0" time="500" tween="cubic" easing="out">WindowClose</animation>
            <control type="image">
                <width>1920</width>
                <height>270</height>
                <include>toast_back</include>
            </control>
            <control type="panel" id="11">
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>400</height>
				<onleft>11</onleft>
				<onright>11</onright>
				<ondown>2</ondown>
				<onup>4</onup>
				<scrolltime>50</scrolltime>
				<viewtype label="536">icon</viewtype>
				<pagecontrol>-</pagecontrol>
				<orientation>horizontal</orientation>
                <animation type="WindowOpen" reversible="false">
                    <effect type="fade" start="0" end="100" time="200" />
                </animation>
                <animation type="WindowClose" reversible="false">
                    <effect type="fade" start="100" end="0" time="200" />
                </animation>
                <itemlayout height="300" width="480">
                    <control type="image">
                        <width>480</width>
                        <height>270</height>
                        <include>toast_back</include>
                    </control>
                    <control type="image">
                        <width>480</width>
                        <height>270</height>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
                        <aspectratio align="center">scale</aspectratio>
                        <bordersize>2</bordersize>
                        <fadetime>200</fadetime>
                    </control>
                    <control type="label">
						<posx>240</posx>
						<posy>272</posy>
						<width>480</width>
						<height>23</height>
						<align>center</align>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="300" width="462">
                    <control type="image">
                        <width>480</width>
                        <height>270</height>
                        <include>toast_back</include>
                    </control>
                    <control type="group">
                        <animation type="Focus">
                            <effect type="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" />
                            <effect type="fade" start="80" end="100" time="200" tween="sine" easing="in" />
                        </animation>
                        <control type="image">
                            <width>480</width>
                            <height>270</height>
                            <texture background="true">$INFO[ListItem.Icon]</texture>
                            <aspectratio align="center">scale</aspectratio>
                            <bordertexture border="8">thumbs/thumb_focus_no_shadow.png</bordertexture>
                            <bordersize>8</bordersize>
                            <fadetime>200</fadetime>
                        </control>
                    </control>
                    <control type="label">
                        <posx>240</posx>
                        <posy>272</posy>
                        <width>480</width>
                        <height>23</height>
                        <align>center</align>
						<info>ListItem.Label</info>
					</control>
				</focusedlayout>
			</control>

            <control type="image">
                <posx>0</posx>
                <posy>270</posy>
                <width>1920</width>
                <height>38</height>
                <texture border="1">settings/bottom_shadow.png</texture>
            </control>
        </control>
     
        <control type="group">
            <animation effect="slide" start="-120" end="0" time="200" delay="200" tween="cubic" easing="out">WindowOpen</animation>
