    <include name="WindowEffect">
        <animation type="WindowOpen" reversible="false" condition="Window.Previous(home)">
            <effect type="zoom" start="200" end="100" center="960,540" easing="out" tween="cubic" time="300" />
            <effect type="fade" start="0" end="100" time="300" />
        </animation>
        <animation type="WindowClose" reversible="false" condition="Window.Next(home)">
            <effect type="zoom" start="100" end="200" center="960,540" easing="in" tween="cubic" time="300" />
            <effect type="fade" start="100" end="0" time="300" />
        </animation>
        <animation type="WindowOpen" reversible="false" condition="![Window.Previous(home)]">
            <effect type="fade" start="0" end="100" time="200" />
        </animation>
        <animation type="WindowClose" reversible="false" condition="![Window.Next(home)]">
            <effect type="fade" start="100" end="0" time="200" />
        </animation>
    </include>

    <include name="DialogEffect">
