    <include name="NotificationVisibilityEffect">
        <animation type="Visible">
            <effect type="fade" start="0" end="100" tween="sine" easing="inout" time="300" />
            <effect type="zoom" start="50" end="100" center="auto" tween="sine" easing="inout" time="300" />
        </animation>
        <animation type="Hidden">
            <effect type="fade" start="100" end="0" tween="sine" easing="inout" time="300" />
            <effect type="zoom" start="100" end="50" center="auto" tween="sine" easing="inout" time="300" />
        </animation>
    </include>

    <include name="WindowEffect">
        <animation type="WindowOpen" reversible="false" condition="Window.Previous(home)">
            <effect type="zoom" start="200" end="100" center="960,540" easing="out" tween="cubic" time="300" />
            <effect type="fade" start="0" end="100" time="300" />
        </animation>
        <animation type="WindowClose" reversible="false" condition="Window.Next(home)">
            <effect type="zoom" start="100" end="200" center="960,540" easing="in" tween="cubic" time="300" />
            <effect type="fade" start="100" end="0" time="300" />
        </animation>
        <animation type="WindowOpen" reversible="false" condition="![Window.Previous(home)]">
            <effect type="fade" start="0" end="100" time="200" />
        </animation>
        <animation type="WindowClose" reversible="false" condition="![Window.Next(home)]">
            <effect type="fade" start="100" end="0" time="200" />
        </animation>
    </include>

    <include name="NotificationEffect">
        <animation effect="slide" start="0,-80" end="0,0" time="500" tween="cubic" easing="out" delay="200">WindowOpen</animation>
        <animation effect="slide" end="0,-80" start="0,0" time="500" tween="cubic" easing="out" delay="200">WindowClose</animation>
    </include>

    <include name="VisibleChangeEffect">
        <animation effect="fade" time="200">Visible</animation>
        <animation effect="fade" time="200">Hidden</animation>
    </include>

