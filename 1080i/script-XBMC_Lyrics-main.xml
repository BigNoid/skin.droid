<?xml version="1.0" encoding="utf-8"?>
<window>
    <allowoverlay>no</allowoverlay>
    <coordinates>
        <posx>0</posx>
        <posy>0</posy>
        <system>1</system>
    </coordinates>
    <animation effect="fade" time="800">WindowOpen</animation>
    <animation effect="fade" time="160">WindowClose</animation>
    <controls>
        <control type="group">
            <animation effect="slide" start="0,0" end="0,-90" time="500" tween="cubic" easing="out" condition="Player.ShowInfo">Conditional</animation>
            <control type="image">
                <posx>0</posx>
                <posy>540</posy>
                <width>1920</width>
                <height>540</height>
                <texture>overlay.png</texture>
            </control>
            <control type="image" id="299">
                <description>list</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>0</width>
                <height>0</height>
                <texture>-</texture>
            </control>
            <!-- ** Required ** Do not change <id> or <type> (Text box for lyrics) -->
            <control type="textbox" id="100">
                <posx>82</posx>
                <posy>700</posy>
                <width>1754</width>
                <height>360</height>
                <align>center</align>
                <font>Plot</font>
                <pagecontrol>101</pagecontrol>
            </control>
            <control type="spincontrol" id="101">
                <posx>1800</posx>
                <posy>6</posy>
                <height>98</height>
                <onleft>101</onleft>
                <onright>101</onright>
                <ondown>101</ondown>
                <onup>101</onup>
                <visible>no</visible>
                <spinwidth>60</spinwidth>
                <spinheight>92</spinheight>
            </control>
            <!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
            <control type="list" id="110">
                <posx>82</posx>
                <posy>700</posy>
                <width>1754</width>
                <height>360</height>
                <onleft>111</onleft>
                <onright>111</onright>
                <onup>110</onup>
                <ondown>110</ondown>
                <pagecontrol>111</pagecontrol>
                <scrolltime tween="quadratic">300</scrolltime>
                <itemlayout height="72">
                    <control type="label">
                        <posx>878</posx>
                        <width>1754</width>
                        <height>72</height>
                        <align>center</align>
                        <font>Plot</font>
                        <textcolor>White2</textcolor>
                        <shadowcolor>Black</shadowcolor>
                        <info>ListItem.Label</info>
                    </control>
                </itemlayout>
                <focusedlayout height="72">
                    <control type="label">
                        <posx>878</posx>
                        <width>1754</width>
                        <height>72</height>
                        <align>center</align>
                        <label>$INFO[ListItem.Label]</label>
                        <font>Plot</font>
                        <shadowcolor>Black</shadowcolor>
                        <visible>!Control.HasFocus(110)</visible>
                    </control>
                    <control type="label">
                        <posx>878</posx>
                        <width>1754</width>
                        <height>72</height>
                        <align>center</align>
                        <label fallback="--">$INFO[ListItem.Label]</label>
                        <font>Plot</font>
                        <textcolor>selected</textcolor>
                        <shadowcolor>Black</shadowcolor>
                        <visible>Control.HasFocus(110)</visible>
                        <animation type="Focus" reversible="false">
                            <effect type="fade" end="100" time="240" />
                        </animation>
                        <animation type="UnFocus" reversible="false">
                            <effect type="fade" start="100" end="0" time="160" />
                        </animation>
                    </control>
                </focusedlayout>
            </control>
            <control type="spincontrol" id="111">
                <posx>1650</posx>
                <posy>700</posy>
                <width>64</width>
                <height>64</height>
                <onleft>110</onleft>
                <onright>110</onright>
                <ondown>110</ondown>
                <font>-</font>
                <onup>110</onup>
                <visible>Control.IsVisible(110)</visible>
                <showonepage>false</showonepage>
                <texturesliderbackground>-</texturesliderbackground>
                <texturesliderbar>-</texturesliderbar>
                <texturesliderbarfocus>-</texturesliderbarfocus>
            </control>
            <control type="label">
                <posx>82</posx>
                <posy>150</posy>
                <width>1754</width>
                <height>478</height>
                <align>center</align>
                <label>31733</label>
                <font>Plot</font>
                <shadowcolor>Black</shadowcolor>
                <visible>Control.IsVisible(120) + ![Control.IsVisible(100) | Control.IsVisible(110)]</visible>
            </control>
            <!-- ** Required ** Do not change <id> or <type> (Song Chooser if it gets it wrong) -->
            <control type="list" id="120">
                <posx>82</posx>
                <posy>700</posy>
                <width>1754</width>
                <height>360</height>
                <onleft>121</onleft>
                <onright>121</onright>
                <onup>120</onup>
                <ondown>120</ondown>
                <pagecontrol>121</pagecontrol>
                <scrolltime>200</scrolltime>
                <itemlayout height="60">
                    <control type="label">
                        <posx>52</posx>
                        <width>1724</width>
                        <height>60</height>
                        <font>Plot</font>
                        <textcolor>White2</textcolor>
                        <shadowcolor>Black</shadowcolor>
                        <info>ListItem.Label</info>
                    </control>
                </itemlayout>
                <focusedlayout height="60">
                    <control type="label">
                        <posx>52</posx>
                        <width>1724</width>
                        <height>60</height>
                        <font>Plot</font>
                        <textcolor>selected</textcolor>
                        <shadowcolor>Black</shadowcolor>
                        <info>ListItem.Label</info>
                    </control>
                </focusedlayout>
            </control>
            <control type="spincontrol" id="121">
                <posx>1680</posx>
                <posy>700</posy>
                <width>64</width>
                <height>64</height>
                <onleft>110</onleft>
                <onright>110</onright>
                <ondown>110</ondown>
                <onup>110</onup>
                <font>-</font>
                <visible>Control.IsVisible(120)</visible>
                <showonepage>false</showonepage>
            </control>
            <control type="label" id="130">
                <posx>0</posx>
                <posy>700</posy>
                <width>600</width>
                <height>90</height>
                <textoffsetx>30</textoffsetx>
                <label>[COLOR=grey]$INFO[Skin.String(LyricsPath)][/COLOR][CR][COLOR=White2]$INFO[Control.GetLabel(200)][/COLOR]</label>
                <font>Plot</font>
                <shadowcolor>Black</shadowcolor>
            </control>
            <control type="label" id="200">
                <font>-</font>
            </control>
        </control>
    </controls>
</window>